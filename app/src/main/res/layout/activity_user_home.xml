<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserHome"
    android:background="#ffeddd">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WELCOME TO HOME"
        android:textColor="#ff0505"
        android:fontFamily="@font/abril_fatface"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="90dp"
        app:cardElevation="15dp"
        android:id="@+id/cardview1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e86e43"
            android:padding="16dp">
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Donors"
                android:drawablePadding="10dp"
                android:id="@+id/donors"
                android:fontFamily="@font/abril_fatface"
                android:background="@drawable/button2"
                android:textColor="#000"
                android:textSize="20sp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cardview2"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="90dp"
        app:cardElevation="15dp"
        android:layout_toRightOf="@+id/cardview1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e86e43"
            android:padding="16dp">
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="RECEIVERS"
                android:id="@+id/receivers"
                android:fontFamily="@font/abril_fatface"
                android:background="@drawable/button2"
                android:textColor="#000"
                android:textSize="17sp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="90dp"
        app:cardElevation="15dp"
        android:layout_below="@+id/cardview1"
        android:id="@+id/cardview3">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e86e43"
            android:padding="16dp">
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="BLOOD BANKS"
                android:id="@+id/bloodbanks"
                android:fontFamily="@font/abril_fatface"
                android:background="@drawable/button2"
                android:textColor="#000"
                android:textSize="20sp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/cardview3"
        app:cardElevation="15dp"
        android:layout_below="@+id/cardview2"
        android:id="@+id/cardview4">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e86e43"
            android:padding="16dp">
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="MY PROFILE"
                android:id="@+id/myprofile"
                android:fontFamily="@font/abril_fatface"
                android:background="@drawable/button2"
                android:textColor="#000"
                android:textSize="20sp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>





</RelativeLayout>