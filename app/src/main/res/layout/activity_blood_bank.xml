<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".BloodBank"
    android:background="#fcf3ec">

    <android.support.v7.widget.Toolbar
        android:id="@+id/bank_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#c4043c"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark">
    </android.support.v7.widget.Toolbar>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/bank_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="#9afcdbc9"
        android:layout_below="@id/bank_toolbar"
        android:padding="2dp">

    </android.support.v7.widget.RecyclerView>


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bank_progressbar"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>
